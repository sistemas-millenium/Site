@model Infra.Entities.SobreNos

<div class="col-lg-8 col-xlg-9 col-md-7">
    <div class="card">
        <!-- Tab panes -->
        <div class="card-body">
            <form class="form-horizontal form-material" enctype="multipart/form-data" method="post">
               @if (ViewBag.Edit)
                {
                    <input type="hidden" asp-for="SobreNosId" value="@Model.SobreNosId" />
                    <input type="hidden" asp-for="Caminho" value="@Model.Caminho" />
                    <input type="hidden" name="imagemalterada" id="imagemalterada" value="false" />
                }

                <div class="form-group">
                    <label class="col-md-12">Imagem</label>
                    <div class="col-md-12">
                        @if (ViewBag.Edit)
                        {
                            <input type="file" onchange="$('#imagemalterada').val(true);" accept=".png,.jpg,.ico" name="imagem" placeholder="" class="form-control form-control-line">
                        }
                        else
                        {
                            <input required type="file" onchange="$('#imagemalterada').val(true);" accept=".png,.jpg,.ico" name="imagem" placeholder="" class="form-control form-control-line">
                        }

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">Titulo de chamada</label>
                    <div class="col-md-12">
                        <input type="text" required asp-for="TituloChamada" placeholder="" class="form-control form-control-line">
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label class="col-md-12">Titulo Principal</label>
                    <div class="col-md-12">
                        <input type="text" required asp-for="TituloPrincipal" class="form-control form-control-line">
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label class="col-md-12">Texto Principal</label>
                    <div class="col-md-12">
                        <textarea rows="10"  required asp-for="TextoPrincipal" cols="200" class="form-control form-control-line">

                        </textarea>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label class="col-md-12">Titulo Secundário</label>
                    <div class="col-md-12">
                        <input type="text" asp-for="TituloSecundario"class="form-control form-control-line">
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label class="col-md-12">Texto Secundário</label>
                    <div class="col-md-12">
                        <textarea rows="10" cols="200" asp-for="TextoSecundario" placeholder="" class="form-control form-control-line"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-12">
                        <button class="btn btn-warning">Alterar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>