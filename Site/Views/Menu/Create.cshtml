@model Infra.Entities.Menu

@{
    var action = ViewContext.RouteData.Values["action"].ToString();
}

<div class="col-lg-8 col-xlg-9 col-md-7">
    <div class="card">
        <!-- Tab panes -->
        <div class="card-body">
            <form class="form-horizontal form-material" method="post" asp-action="@action">
                 @if (ViewBag.Edit)
                {
                    <input type="hidden" asp-for="MenuId" value="@Model.MenuId" />
                    <input type="hidden" asp-for="Ordenacao" value="@Model.Ordenacao" />
                }
                <div class="form-group">
                    <label class="col-md-12">Nome</label>
                    <div class="col-md-12">
                        <input asp-for="Nome" required type="text" placeholder="" class="form-control form-control-line">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">Url</label>
                    <div class="col-md-12">
                        <input asp-for="Url" required type="text" placeholder="" class="form-control form-control-line">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">Descrição</label>
                    <div class="col-md-12">
                        <input asp-for="Descriacao" type="text" placeholder="" class="form-control form-control-line">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success">Gravar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>